<?xml version="1.0" encoding="utf-8"?>
<resources><style name="EditTextForLongText">
    <item name="android:layout_width">350dp</item>
    <item name="android:layout_height">100dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:ems">10</item>
    <item name="android:inputType">textMultiLine</item> <!-- Permite múltiples líneas de texto -->
    <item name="android:gravity">top|start</item> <!-- Alineación del texto en la parte superior y a la izquierda -->
    <item name="android:scrollbars">vertical</item> <!-- Añade barras de desplazamiento vertical -->
    <item name="android:padding">8dp</item> <!-- Espaciado interno -->
</style>
    <style name="CustomCalendarViewStyle">
        <item name="android:dateTextAppearance">@style/CustomDateTextAppearance</item>
    </style>

    <style name="CustomDateTextAppearance">
        <item name="android:textColor">@color/calendar_day_colors</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CalendarTextAppearance">
        <!-- Estilo predeterminado para las fechas sin eventos -->
        <!-- Personaliza este estilo según tus preferencias -->
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalendarTextAppearanceWithEvent">
        <!-- Estilo para las fechas con eventos -->
        <!-- Puedes personalizar este estilo para resaltar las fechas con eventos -->
        <item name="android:textColor">#FF0000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="Button">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Titles">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SubTitles">
        <item name="android:fontFamily">sans</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="SpinnerItems">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>